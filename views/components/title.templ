package components

type TitleProps struct {
	Title string
}

templ Title(props TitleProps) {
	@TitleCSS()
	<h1 class="title">{props.Title}</h1>
}

templ TitleCSS() {
	<style>
		.title {
			font-size: 70px;
			font-weight: bold;
			margin-bottom: 12px;
			margin-top: 0;
			color: var(--color-white);
		}
	</style>
}